<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SAS.Pages.Duties.AddDutyPage"
             Title="Добавить дежурство">
    <ContentPage.Content>
        <StackLayout Padding="10" Spacing="20">
            <DatePicker x:Name="DateEntry" />
            <TimePicker x:Name="TimeEntry" />
            <Label Text="Выберите охранника"/>
            <Picker x:Name="EmployeePicker" />
            <Label Text="Выберите объект"/>
            <Picker x:Name="SecuredObjectPicker" />
            <Button Text="Сохранить" Clicked="OnSaveButtonClicked"/>
            <Button Text="Отмена" Clicked="OnCancelButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>